{
	"name": "Random Content Extension",
	"version": "1.0",
	"description": "Displays random content in an alert when opening a new tab.",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"permissions": ["tabs"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"48": "logo.png"
		}
	},
	"icons": {
		"48": "logo.png"
	},
	"manifest_version": 2
}
